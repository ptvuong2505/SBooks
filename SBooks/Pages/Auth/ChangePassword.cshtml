@page
@model SBooks.Pages.Auth.ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark text-center">
                    <h4><i class="fas fa-key me-2"></i>Đổi mật khẩu</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <div class="mb-3">
                            <label asp-for="ChangePassword.CurrentPassword" class="form-label">
                                <i class="fas fa-lock me-2"></i>Mật khẩu hiện tại
                            </label>
                            <div class="input-group">
                                <input asp-for="ChangePassword.CurrentPassword" class="form-control" type="password" id="currentPassword" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('currentPassword')">
                                    <i class="fas fa-eye" id="currentPasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ChangePassword.CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ChangePassword.NewPassword" class="form-label">
                                <i class="fas fa-key me-2"></i>Mật khẩu mới
                            </label>
                            <div class="input-group">
                                <input asp-for="ChangePassword.NewPassword" class="form-control" type="password" id="newPassword" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('newPassword')">
                                    <i class="fas fa-eye" id="newPasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ChangePassword.NewPassword" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>Mật khẩu phải có ít nhất 6 ký tự
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ChangePassword.ConfirmPassword" class="form-label">
                                <i class="fas fa-shield-alt me-2"></i>Xác nhận mật khẩu mới
                            </label>
                            <div class="input-group">
                                <input asp-for="ChangePassword.ConfirmPassword" class="form-control" type="password" id="confirmPassword" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('confirmPassword')">
                                    <i class="fas fa-eye" id="confirmPasswordIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ChangePassword.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-2"></i>Đổi mật khẩu
                            </button>
                            <a class="btn btn-outline-secondary" href="@Model.ReturnUrl">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Password Requirements -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="fas fa-shield-alt me-2"></i>Yêu cầu mật khẩu</h6>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1">
                            <i class="fas fa-check text-success me-2"></i>Ít nhất 6 ký tự
                        </li>
                        <li class="mb-1">
                            <i class="fas fa-info text-info me-2"></i>Nên kết hợp chữ cái và số
                        </li>
                        <li class="mb-1">
                            <i class="fas fa-info text-info me-2"></i>Nên có ký tự đặc biệt
                        </li>
                        <li>
                            <i class="fas fa-exclamation text-warning me-2"></i>Không sử dụng thông tin cá nhân
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(inputId + 'Icon');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        }

        // Real-time password validation
        document.getElementById('newPassword').addEventListener('input', function() {
            const password = this.value;
            const requirements = document.querySelectorAll('.card:last-child .list-unstyled li');
            
            // Check length
            if (password.length >= 6) {
                requirements[0].querySelector('i').className = 'fas fa-check text-success me-2';
            } else {
                requirements[0].querySelector('i').className = 'fas fa-times text-danger me-2';
            }
        });

        // Match password confirmation
        document.getElementById('confirmPassword').addEventListener('input', function() {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = this.value;
            
            if (newPassword === confirmPassword && confirmPassword !== '') {
                this.classList.remove('is-invalid');
                this.classList.add('is-valid');
            } else if (confirmPassword !== '') {
                this.classList.remove('is-valid');
                this.classList.add('is-invalid');
            }
        });
    </script>
}
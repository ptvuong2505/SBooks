@page
@model SBooks.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<style>
    .login-container {
        max-width: 420px;
        margin: 80px auto;
        background: #ffffff;
        padding: 2rem 2.5rem;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }

    .login-container h2 {
        text-align: center;
        margin-bottom: 1.5rem;
        font-weight: 600;
        color: #333;
    }

    .form-label {
        font-weight: 500;
        color: #444;
    }

    .btn-login {
        width: 100%;
        padding: 0.75rem;
        font-size: 1rem;
        border-radius: 8px;
        background-color: #0d6efd;
        /* xanh Bootstrap */
        color: #fff;
        font-weight: 600;
        transition: background 0.3s;
    }

    .btn-login:hover {
        background-color: #0b5ed7;
    }

    .form-check-label {
        color: #555;
    }
</style>

<div class="login-container">
    <h2>Sign In</h2>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger text-center" role="alert">
            @Model.ErrorMessage
        </div>
    }

    <form method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="Username" class="form-label"></label>
            <input asp-for="Username" class="form-control" placeholder="Enter your username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-login">Login</button>
    </form>

    <hr>
    <div class="text-center">
        <p class="mb-0">
            Chưa có tài khoản?
            <a href="/Auth/Register" class="text-decoration-none" style="color: #667eea; font-weight: 500;">
                <i class="fas fa-user-plus"></i> Đăng ký ngay
            </a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SBooks</title>

    <!-- 🩵 Google Font -->
    @* <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet"> *@

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SBooks.styles.css" asp-append-version="true" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    @await RenderSectionAsync("Styles", required: false)

</head>

<body>
    <!-- Anti-forgery token for AJAX requests -->
    @Html.AntiForgeryToken()
    
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid px-5 ">
                <a class="navbar-brand" asp-page="/Index">
                    <i class="fas fa-book text-primary me-1"></i>SBooks
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">
                                <i class="fas fa-home me-1"></i>Trang chủ
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Books/Index">
                                <i class="fas fa-book me-1"></i>Sách
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Books/TopFavoriteBooks">
                                <i class="fas fa-trophy me-1"></i>Top Yêu Thích
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Authors/Index">
                                <i class="fas fa-user-edit me-1"></i>Tác giả
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Favorites/Index">
                                    <i class="fas fa-heart me-1"></i>Yêu thích
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false" data-bs-auto-close="outside">
                                    <i class="fas fa-user me-1"></i>@(User.Identity.Name ?? "User")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" href="/Profile/Index">
                                        <i class="fas fa-user-circle me-2"></i>Hồ sơ
                                    </a></li>
                                    <li><a class="dropdown-item" href="/Favorites/Index">
                                        <i class="fas fa-heart me-2"></i>Sách yêu thích
                                    </a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="/Admin/Dashboard">
                                            <i class="fas fa-tachometer-alt me-2"></i>Quản trị
                                        </a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="/Auth/Logout">
                                        <i class="fas fa-sign-out-alt me-2"></i>Đăng xuất
                                    </a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Auth/Login">Đăng nhập</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Auth/Register">Đăng ký</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top text-center py-3">
        <div class="container">
            &copy; 2025 - <strong>SBooks</strong> | <a asp-page="/Privacy">Privacy Policy</a>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Debug script to check Bootstrap -->
    <script>
        console.log('Bootstrap version:', typeof bootstrap !== 'undefined' ? 'Loaded' : 'Not loaded');
        console.log('jQuery version:', typeof $ !== 'undefined' ? $.fn.jquery : 'Not loaded');
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
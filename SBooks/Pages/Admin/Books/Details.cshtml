@page
@model DetailsModel
@{
    ViewData["Title"] = "Chi tiết sách";
    Layout = "_AdminLayout";
}

<!-- Page Header -->
<div class="admin-card mb-4">
    <div class="card-header bg-info text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-eye me-2"></i>Chi tiết sách
            </h4>
            <div>
                <a asp-page="Edit" asp-route-id="@Model.Book.BookId" class="btn btn-light btn-sm me-2">
                    <i class="fas fa-edit me-1"></i>Chỉnh sửa
                </a>
                <a asp-page="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Left Column - Book Image -->
    <div class="col-md-4">
        <div class="admin-card h-100">
            <div class="card-body text-center">
                <h5 class="border-bottom pb-2 mb-3">
                    <i class="fas fa-image me-2 text-primary"></i>Ảnh bìa
                </h5>

                @if (!string.IsNullOrEmpty(Model.Book.UrlImage))
                {
                    <img src="@Model.Book.UrlImage" alt="@Model.Book.Title" class="img-fluid rounded shadow-sm mb-3"
                        style="max-height: 400px; object-fit: cover;">
                }
                else
                {
                    <div class="bg-light text-muted d-flex align-items-center justify-content-center rounded mb-3"
                        style="height: 300px; border: 1px solid #dee2e6;">
                        <div class="text-center">
                            <i class="fas fa-book" style="font-size: 4rem;"></i>
                            <p class="mt-2">Chưa có ảnh bìa</p>
                        </div>
                    </div>
                }

                <!-- Quick Stats -->
                <div class="row text-center mt-4">
                    <div class="col-6">
                        <div class="border rounded p-3">
                            <div class="fw-bold text-primary h5 mb-0">@(Model.Book.ViewCount ?? 0)</div>
                            <small class="text-muted">Lượt xem</small>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="border rounded p-3">
                            <div class="fw-bold text-success h5 mb-0">
                                @if (Model.Book.Price.HasValue)
                                {
                                    @Model.Book.Price.Value.ToString("N0")
                                }
                                else
                                {
                                    <span class="text-muted">Miễn phí</span>
                                }
                            </div>
                            <small class="text-muted">Giá (VND)</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column - Book Information -->
    <div class="col-md-8">
        <div class="admin-card h-100">
            <div class="card-body">
                <!-- Basic Information -->
                <div class="mb-4">
                    <h5 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-info-circle me-2 text-primary"></i>Thông tin cơ bản
                    </h5>

                    <dl class="row">
                        <dt class="col-sm-3">Tiêu đề:</dt>
                        <dd class="col-sm-9">
                            <span class="fw-bold text-primary h5">@Model.Book.Title</span>
                        </dd>

                        <dt class="col-sm-3">Mô tả:</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Book.Description))
                            {
                                <div class="border rounded p-3 bg-light">
                                    @Model.Book.Description
                                </div>
                            }
                            else
                            {
                                <em class="text-muted">Chưa có mô tả</em>
                            }
                        </dd>

                        <dt class="col-sm-3">Thể loại:</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Book.Genre))
                            {
                                <span class="badge bg-primary">@Model.Book.Genre</span>
                            }
                            else
                            {
                                <em class="text-muted">Chưa phân loại</em>
                            }
                        </dd>

                        <dt class="col-sm-3">Năm xuất bản:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Book.PublishedYear.HasValue)
                            {
                                <span class="badge bg-info">@Model.Book.PublishedYear</span>
                            }
                            else
                            {
                                <em class="text-muted">Chưa xác định</em>
                            }
                        </dd>

                        <dt class="col-sm-3">Giá:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Book.Price.HasValue)
                            {
                                <span class="fw-bold text-success">@Model.Book.Price.Value.ToString("N0") VND</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Miễn phí</span>
                            }
                        </dd>
                    </dl>
                </div>

                <!-- Related Information -->
                <div class="mb-4">
                    <h5 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-users me-2 text-primary"></i>Thông tin liên quan
                    </h5>

                    <dl class="row">
                        <dt class="col-sm-3">Tác giả:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Book.Author != null)
                            {
                                <a href="/Admin/Authors/Details/@Model.Book.Author.AuthorId" class="text-decoration-none">
                                    <i class="fas fa-user me-1"></i>@Model.Book.Author.AuthorName
                                </a>
                            }
                            else
                            {
                                <em class="text-muted">Chưa xác định tác giả</em>
                            }
                        </dd>

                        <dt class="col-sm-3">Nhà xuất bản:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Book.Publisher != null)
                            {
                                <a href="/Admin/Publishers/Details/@Model.Book.Publisher.PublisherId"
                                    class="text-decoration-none">
                                    <i class="fas fa-building me-1"></i>@Model.Book.Publisher.PublisherName
                                </a>
                            }
                            else
                            {
                                <em class="text-muted">Chưa xác định nhà xuất bản</em>
                            }
                        </dd>

                        <dt class="col-sm-3">Người thêm:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Book.Admin != null)
                            {
                                <span><i class="fas fa-user-shield me-1"></i>@(Model.Book.Admin.FullName)
                                    (@(Model.Book.Admin.Username))</span>
                            }
                            else
                            {
                                <em class="text-muted">Hệ thống</em>
                            }
                        </dd>
                    </dl>
                </div>

                <!-- System Information -->
                <div class="mb-4">
                    <h5 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-cog me-2 text-primary"></i>Thông tin hệ thống
                    </h5>

                    <dl class="row">
                        <dt class="col-sm-3">ID sách:</dt>
                        <dd class="col-sm-9">
                            <code>@Model.Book.BookId</code>
                        </dd>

                        <dt class="col-sm-3">Ngày tạo:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Book.CreatedAt.HasValue)
                            {
                                <i class="fas fa-calendar-plus me-1 text-success"></i>
                                @Model.Book.CreatedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")
                            }
                            else
                            {
                                <em class="text-muted">Không xác định</em>
                            }
                        </dd>

                        <dt class="col-sm-3">Cập nhật cuối:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Book.UpdatedAt.HasValue)
                            {
                                <i class="fas fa-calendar-edit me-1 text-warning"></i>
                                @Model.Book.UpdatedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm:ss")
                            }
                            else
                            {
                                <em class="text-muted">Chưa cập nhật</em>
                            }
                        </dd>

                        <dt class="col-sm-3">Lượt xem:</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@(Model.Book.ViewCount ?? 0) lượt</span>
                        </dd>
                    </dl>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                    <div>
                        <a asp-page="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>Danh sách sách
                        </a>
                    </div>
                    <div>
                        <a asp-page="Edit" asp-route-id="@Model.Book.BookId" class="btn btn-warning me-2">
                            <i class="fas fa-edit me-2"></i>Chỉnh sửa
                        </a>
                        <a asp-page="Delete" asp-route-id="@Model.Book.BookId" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Xóa
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
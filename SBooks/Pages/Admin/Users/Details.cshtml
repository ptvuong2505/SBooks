@page
@model DetailsModel
@{
    ViewData["Title"] = "Chi tiết Người dùng";
    Layout = "_AdminLayout";
}

<!-- Page Header -->
<div class="admin-card mb-4">
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-user me-2"></i>Chi tiết Người dùng
            </h4>
            <div>
                <a asp-page="Edit" asp-route-id="@Model.User.UserId" class="btn btn-warning btn-sm me-2">
                    <i class="fas fa-edit me-1"></i>Chỉnh sửa
                </a>
                <a asp-page="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- User Info Card -->
    <div class="col-lg-4">
        <div class="admin-card mb-4">
            <div class="card-body text-center">
                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
                    style="width: 100px; height: 100px;">
                    <i class="fas fa-user text-white fa-3x"></i>
                </div>

                <h4 class="card-title mb-1">@Model.User.Username</h4>
                @if (!string.IsNullOrEmpty(Model.User.FullName))
                {
                    <p class="text-muted mb-2">@Model.User.FullName</p>
                }

                <span class="badge @Model.GetUserRoleBadgeClass() mb-3">@Model.GetUserRole()</span>

                <div class="row text-center mt-4">
                    <div class="col-4">
                        <div class="border-end">
                            <h5 class="text-primary mb-0">@Model.User.Books.Count</h5>
                            <small class="text-muted">Sách</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="border-end">
                            <h5 class="text-warning mb-0">@Model.User.Reviews.Count</h5>
                            <small class="text-muted">Đánh giá</small>
                        </div>
                    </div>
                    <div class="col-4">
                        <h5 class="text-success mb-0">@Model.TotalFavorites</h5>
                        <small class="text-muted">Yêu thích</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Info -->
        <div class="admin-card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin liên hệ</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label fw-bold">Email:</label>
                    <p class="mb-0 text-break">@Model.User.Email</p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Trạng thái:</label>
                    <p class="mb-0">
                        @if (Model.User.IsActive == true)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check me-1"></i>Hoạt động
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="fas fa-times me-1"></i>Không hoạt động
                            </span>
                        }
                    </p>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Ngày tạo:</label>
                    <p class="mb-0">
                        @if (Model.User.CreatedAt.HasValue)
                        {
                            @Model.User.CreatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                            <br>
                        
                            <small class="text-muted">(@Model.GetUserAge() ngày trước)</small>
                        }
                        else
                        {
                            <span class="text-muted">Không có thông tin</span>
                        }
                    </p>
                </div>

                <div>
                    <label class="form-label fw-bold">Vai trò:</label>
                    <div>
                        @if (Model.User.Roles.Any())
                        {
                            @foreach (var role in Model.User.Roles)
                            {
                                <span class="badge @(role.RoleName == "Admin" ? "bg-danger" : "bg-success") me-1">
                                    @role.RoleName
                                </span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Chưa phân quyền</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="col-lg-8">
        <!-- User Books -->
        <div class="admin-card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-book me-2"></i>Sách đã thêm (@Model.User.Books.Count)</h5>
                @if (Model.User.Books.Count > 5)
                {
                    <small><a href="#" class="text-primary">Xem tất cả</a></small>
                }
            </div>
            <div class="card-body">
                @if (Model.UserBooks.Any())
                {
                    <div class="row">
                        @foreach (var book in Model.UserBooks)
                        {
                            <div class="col-md-6 mb-3">
                                <div class="d-flex">
                                    <div class="bg-info rounded d-flex align-items-center justify-content-center me-3"
                                        style="width: 50px; height: 60px; min-width: 50px;">
                                        <i class="fas fa-book text-white"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">@book.Title</h6>
                                        @if (book.Publisher != null)
                                        {
                                            <small class="text-muted d-block">@book.Publisher.PublisherName</small>
                                        }
                                        @if (book.CreatedAt.HasValue)
                                        {
                                            <small class="text-muted">@book.CreatedAt.Value.ToString("dd/MM/yyyy")</small>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3 mb-0">
                        <i class="fas fa-book me-2"></i>Chưa thêm sách nào
                    </p>
                }
            </div>
        </div>

        <!-- User Reviews -->
        <div class="admin-card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-star me-2"></i>Đánh giá gần đây (@Model.User.Reviews.Count)</h5>
                @if (Model.User.Reviews.Count > 5)
                {
                    <small><a href="#" class="text-primary">Xem tất cả</a></small>
                }
            </div>
            <div class="card-body">
                @if (Model.UserReviews.Any())
                {
                    @foreach (var review in Model.UserReviews)
                    {
                        <div class="border-bottom pb-3 mb-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div>
                                    <h6 class="mb-1">@review.Book?.Title</h6>
                                    <div class="text-info mb-1">
                                        <i class="fas fa-thumbs-up me-1"></i>@(review.LikeCount ?? 0) likes
                                        <i class="fas fa-thumbs-down ms-2 me-1"></i>@(review.DislikeCount ?? 0) dislikes
                                    </div>
                                </div>
                                <small class="text-muted">@review.CreatedAt?.ToString("dd/MM/yyyy")</small>
                            </div>
                            @if (!string.IsNullOrEmpty(review.CommentText))
                            {
                                <p class="mb-0 text-muted">
                                    @(review.CommentText.Length > 150 ? review.CommentText.Substring(0, 150) + "..." :
                                                            review.CommentText)
                                </p>
                            }
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center py-3 mb-0">
                        <i class="fas fa-comment me-2"></i>Chưa có đánh giá nào
                    </p>
                }
            </div>
        </div>

        <!-- Activity Log -->
        <div class="admin-card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-history me-2"></i>Hoạt động gần đây</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentActivities.Any())
                {
                    <div class="timeline">
                        @foreach (var activity in Model.RecentActivities)
                        {
                            <div class="d-flex mb-3">
                                <div class="bg-info rounded-circle d-flex align-items-center justify-content-center me-3"
                                    style="width: 30px; height: 30px; min-width: 30px;">
                                    <i class="fas fa-circle text-white" style="font-size: 8px;"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="mb-1">
                                        <strong>@activity.ActivityType</strong>
                                        @if (!string.IsNullOrEmpty(activity.Details))
                                        {
                                            <span> - @activity.Details</span>
                                        }
                                    </p>
                                    <small class="text-muted">@activity.ActivityTime?.ToString("dd/MM/yyyy HH:mm")</small>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3 mb-0">
                        <i class="fas fa-history me-2"></i>Chưa có hoạt động nào được ghi lại
                    </p>
                }
            </div>
        </div>
    </div>
</div>
@page
@model IndexModel
@{
    ViewData["Title"] = "Quản lý Người dùng";
    Layout = "_AdminLayout";
}

<!-- Page Header -->
<div class="admin-card mb-4">
    <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-users me-2"></i>Quản lý Người dùng
            </h4>
            <a asp-page="Create" class="btn btn-light btn-sm">
                <i class="fas fa-plus me-1"></i>Thêm người dùng mới
            </a>
        </div>
    </div>
</div>

<!-- Search Section -->
<div class="admin-card mb-4">
    <div class="card-body p-3">
        <form method="get" id="searchForm">
            <div class="row g-3 align-items-center">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Tìm kiếm</label>
                    <input type="text" class="form-control" asp-for="SearchTerm"
                        placeholder="Tên đăng nhập, email hoặc họ tên...">
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold">Trạng thái</label>
                    <select class="form-select" asp-for="StatusFilter">
                        <option value="">Tất cả</option>
                        <option value="active">Hoạt động</option>
                        <option value="inactive">Không hoạt động</option>
                        <option value="admin">Quản trị viên</option>
                        <option value="user">Người dùng</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold">Sắp xếp</label>
                    <select class="form-select" asp-for="SortBy">
                        <option value="Username">Tên đăng nhập</option>
                        <option value="Email">Email</option>
                        <option value="FullName">Họ tên</option>
                        <option value="CreatedAt">Ngày tạo</option>
                        <option value="BookCount">Số sách</option>
                        <option value="ReviewCount">Số đánh giá</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold">Thứ tự</label>
                    <select class="form-select" asp-for="SortDirection">
                        <option value="asc">Tăng dần</option>
                        <option value="desc">Giảm dần</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold">&nbsp;</label>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                        <a href="/Admin/Users" class="btn btn-outline-secondary">
                            <i class="fas fa-eraser"></i>
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Results Summary -->
<div class="row mb-3">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <p class="text-muted mb-0">
                    Hiển thị <strong class="text-primary">@Model.FilteredUsers</strong> /
                    <strong>@Model.TotalUsers</strong> người dùng
                    @if (Model.FilteredUsers != Model.TotalUsers)
                    {
                        <span class="badge bg-info ms-2">Đã lọc</span>
                    }
                </p>
            </div>
            <div>
                <a asp-page="Create" class="btn btn-admin-primary">
                    <i class="fas fa-plus me-2"></i>Thêm người dùng mới
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Users Table -->
@if (Model.Users.Any())
{
    <div class="admin-card">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Người dùng</th>
                        <th>Email</th>
                        <th>Vai trò</th>
                        <th>Trạng thái</th>
                        <th>Hoạt động</th>
                        <th>Ngày tạo</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3"
                                        style="width: 40px; height: 40px;">
                                        <i class="fas fa-user text-white"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0">@user.Username</h6>
                                        @if (!string.IsNullOrEmpty(user.FullName))
                                        {
                                            <small class="text-muted">@user.FullName</small>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="text-break">@user.Email</span>
                            </td>
                            <td>
                                @if (user.Roles.Any())
                                {
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge @(role.RoleName == "Admin" ? "bg-danger" : "bg-success") me-1">
                                            @role.RoleName
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (user.IsActive == true)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check me-1"></i>Hoạt động
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-times me-1"></i>Không hoạt động
                                    </span>
                                }
                            </td>
                            <td>
                                <div class="d-flex gap-2">
                                    <span class="badge bg-info" title="Số sách đã thêm">
                                        <i class="fas fa-book me-1"></i>@user.Books.Count
                                    </span>
                                    <span class="badge bg-warning" title="Số đánh giá">
                                        <i class="fas fa-star me-1"></i>@user.Reviews.Count
                                    </span>
                                </div>
                            </td>
                            <td>
                                @if (user.CreatedAt.HasValue)
                                {
                                    <span class="text-muted">@user.CreatedAt.Value.ToString("dd/MM/yyyy")</span>
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-page="Details" asp-route-id="@user.UserId" class="btn btn-outline-info"
                                        title="Xem chi tiết" data-bs-toggle="tooltip">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-page="Edit" asp-route-id="@user.UserId" class="btn btn-outline-warning"
                                        title="Chỉnh sửa" data-bs-toggle="tooltip">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-page="Delete" asp-route-id="@user.UserId" class="btn btn-outline-danger" title="Xóa"
                                        data-bs-toggle="tooltip">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="admin-card">
        <div class="card-body text-center py-5">
            @if (!string.IsNullOrEmpty(Model.SearchTerm) || !string.IsNullOrEmpty(Model.StatusFilter))
            {
                <i class="fas fa-search text-muted" style="font-size: 4rem; opacity: 0.5;"></i>
                <h5 class="text-muted mt-3">Không tìm thấy người dùng phù hợp</h5>
                <p class="text-muted">Thử điều chỉnh từ khóa tìm kiếm hoặc bộ lọc.</p>
                <a href="/Admin/Users" class="btn btn-outline-secondary me-2">
                    <i class="fas fa-eraser me-1"></i>Xóa bộ lọc
                </a>
            }
            else
            {
                <i class="fas fa-user-plus fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">Chưa có người dùng nào</h5>
                <p class="text-muted">Hãy thêm người dùng đầu tiên vào hệ thống</p>
            }
            <a asp-page="Create" class="btn btn-admin-primary">
                <i class="fas fa-plus me-2"></i>Thêm người dùng mới
            </a>
        </div>
    </div>
}

<!-- Pagination -->
@if (Model.Users.Any() && Model.TotalPages > 1)
{
    <nav aria-label="Phân trang" class="mt-4">
        <ul class="pagination justify-content-center">
            <!-- Previous Page -->
            @if (Model.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                        href="?PageNumber=@(Model.PageNumber - 1)&SearchTerm=@Model.SearchTerm&StatusFilter=@Model.StatusFilter&SortBy=@Model.SortBy&SortDirection=@Model.SortDirection">
                        <i class="fas fa-chevron-left"></i> Trước
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link"><i class="fas fa-chevron-left"></i> Trước</span>
                </li>
            }

            <!-- Page Numbers -->
            @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link"
                        href="?PageNumber=@i&SearchTerm=@Model.SearchTerm&StatusFilter=@Model.StatusFilter&SortBy=@Model.SortBy&SortDirection=@Model.SortDirection">@i</a>
                </li>
            }

            <!-- Next Page -->
            @if (Model.PageNumber < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link"
                        href="?PageNumber=@(Model.PageNumber + 1)&SearchTerm=@Model.SearchTerm&StatusFilter=@Model.StatusFilter&SortBy=@Model.SortBy&SortDirection=@Model.SortDirection">
                        Sau <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Sau <i class="fas fa-chevron-right"></i></span>
                </li>
            }
        </ul>
    </nav>

    <!-- Page Info -->
    <div class="text-center text-muted mt-2">
        <small>
            Trang @Model.PageNumber / @Model.TotalPages
            (Hiển thị @((Model.PageNumber - 1) * Model.PageSize + 1) - @Math.Min(Model.PageNumber * Model.PageSize,
                    Model.FilteredUsers) trong tổng số @Model.FilteredUsers kết quả)
    </small>
</div>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').each(function () {
                new bootstrap.Tooltip(this);
            });
        });
    </script>
}
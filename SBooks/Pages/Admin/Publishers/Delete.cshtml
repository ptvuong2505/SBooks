@page
@model DeleteModel
@{
    ViewData["Title"] = "Xóa Nhà xuất bản";
    Layout = "_AdminLayout";
}

<!-- Page Header -->
<div class="admin-card mb-4">
    <div class="card-header bg-danger text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-trash me-2"></i>Xóa Nhà xuất bản
            </h4>
            <div>
                <a asp-page="Details" asp-route-id="@Model.Publisher.PublisherId" class="btn btn-info btn-sm me-2">
                    <i class="fas fa-eye me-1"></i>Xem chi tiết
                </a>
                <a asp-page="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Publisher Information -->
    <div class="col-lg-8">
        <!-- Warning Alert -->
        <div class="alert alert-danger" role="alert">
            <h5 class="alert-heading">
                <i class="fas fa-exclamation-triangle me-2"></i>Cảnh báo!
            </h5>
            <p class="mb-2">
                Bạn đang chuẩn bị xóa nhà xuất bản <strong>@Model.Publisher.PublisherName</strong>.
                Hành động này <strong>không thể hoàn tác</strong>!
            </p>
            @if (Model.HasDependencies)
            {
                <hr>
                <p class="mb-0">
                    <i class="fas fa-ban me-2"></i>
                    <strong>Không thể xóa!</strong> Nhà xuất bản này có <strong>@Model.BookCount sách</strong> liên quan.
                </p>
            }
        </div>

        <!-- Publisher Details Card -->
        <div class="admin-card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-building me-2"></i>Thông tin nhà xuất bản</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td class="fw-bold" style="width: 40%;">Tên nhà xuất bản:</td>
                                <td>@Model.Publisher.PublisherName</td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Địa chỉ:</td>
                                <td class="text-break">
                                    @if (!string.IsNullOrEmpty(Model.Publisher.Address))
                                    {
                                        @Model.Publisher.Address
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có thông tin</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Website:</td>
                                <td class="text-break">
                                    @if (!string.IsNullOrEmpty(Model.Publisher.Website))
                                    {
                                        <a href="@(Model.Publisher.Website.StartsWith("http") ? Model.Publisher.Website : "https://" + Model.Publisher.Website)"
                                            target="_blank" class="text-decoration-none">
                                            @Model.Publisher.Website
                                            <i class="fas fa-external-link-alt ms-1 small"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Không có thông tin</span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>

                    <div class="col-md-6">
                        <table class="table table-borderless">
                            <tr>
                                <td class="fw-bold" style="width: 40%;">Tổng sách:</td>
                                <td>
                                    <span class="badge @(Model.BookCount > 0 ? "bg-danger" : "bg-success")">
                                        @Model.BookCount sách
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="fw-bold">ID:</td>
                                <td><code>@Model.Publisher.PublisherId</code></td>
                            </tr>
                            <tr>
                                <td class="fw-bold">Trạng thái:</td>
                                <td>
                                    @if (Model.HasDependencies)
                                    {
                                        <span class="badge bg-warning">
                                            <i class="fas fa-exclamation-triangle me-1"></i>Có dữ liệu liên quan
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>Có thể xóa
                                        </span>
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Books -->
        @if (Model.HasDependencies)
        {
            <div class="admin-card mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">
                        <i class="fas fa-book me-2"></i>Sách liên quan (@Model.BookCount)
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Lưu ý:</strong> Các sách này phải được xóa hoặc chuyển sang nhà xuất bản khác trước khi xóa
                        nhà xuất bản này.
                    </div>

                    @if (Model.SampleBooks.Any())
                    {
                        <div class="row">
                            @foreach (var book in Model.SampleBooks)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card border-warning">
                                        <div class="card-body p-3">
                                            <div class="d-flex">
                                                <div class="bg-warning rounded d-flex align-items-center justify-content-center me-3"
                                                    style="width: 40px; height: 50px; min-width: 40px;">
                                                    <i class="fas fa-book text-white"></i>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="card-title mb-1">@book.Title</h6>
                                                    @if (book.Author != null)
                                                    {
                                                        <small class="text-muted d-block">
                                                            @book.Author.AuthorName
                                                        </small>
                                                    }
                                                    @if (book.PublishedYear.HasValue)
                                                    {
                                                        <small class="text-muted">Năm xuất bản: @book.PublishedYear</small>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        @if (Model.BookCount > Model.SampleBooks.Count)
                        {
                            <div class="text-center mt-3">
                                <span class="text-muted">
                                    Và @(Model.BookCount - Model.SampleBooks.Count) sách khác...
                                </span>
                            </div>
                        }
                    }
                </div>
            </div>
        }

        <!-- Confirmation Section -->
        <form method="post">
            <div class="admin-card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <a asp-page="Index" class="btn btn-secondary me-2">
                                <i class="fas fa-times me-2"></i>Hủy bỏ
                            </a>
                            <a asp-page="Edit" asp-route-id="@Model.Publisher.PublisherId"
                                class="btn btn-outline-warning">
                                <i class="fas fa-edit me-2"></i>Chỉnh sửa thay thế
                            </a>
                        </div>

                        @if (!Model.HasDependencies)
                        {
                            <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Bạn có chắc chắn muốn xóa nhà xuất bản @Model.Publisher.PublisherName? Hành động này không thể hoàn tác!')">
                                <i class="fas fa-trash me-2"></i>Xác nhận xóa
                            </button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger" disabled>
                                <i class="fas fa-ban me-2"></i>Không thể xóa
                            </button>
                        }
                    </div>
                </div>
            </div>
        </form>
    </div>

    <!-- Publisher Avatar -->
    <div class="col-lg-4">
        <div class="admin-card">
            <div class="card-body text-center">
                <div class="bg-danger rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
                    style="width: 100px; height: 100px;">
                    <i class="fas fa-building text-white fa-3x"></i>
                </div>

                <h4 class="card-title mb-3">@Model.Publisher.PublisherName</h4>

                <div class="row text-center mt-4">
                    <div class="col-12">
                        <h5 class="@(Model.BookCount > 0 ? "text-danger" : "text-success") mb-0">@Model.BookCount</h5>
                        <small class="text-muted">Sách liên quan</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Impact Analysis -->
        <div class="admin-card mt-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Phân tích tác động</h6>
            </div>
            <div class="card-body">
                @if (Model.HasDependencies)
                {
                    <div class="alert alert-danger p-2 mb-3">
                        <small>
                            <i class="fas fa-ban me-1"></i>
                            <strong>Không thể xóa:</strong> Có @Model.BookCount sách liên quan
                        </small>
                    </div>

                    <h6 class="text-danger mb-2">Hành động cần thiết:</h6>
                    <ul class="list-unstyled small">
                        <li class="mb-1">
                            <i class="fas fa-arrow-right text-warning me-2"></i>
                            Xóa tất cả @Model.BookCount sách
                        </li>
                        <li class="mb-1">
                            <i class="fas fa-arrow-right text-info me-2"></i>
                            Hoặc chuyển sách sang NXB khác
                        </li>
                        <li>
                            <i class="fas fa-arrow-right text-success me-2"></i>
                            Sau đó mới có thể xóa NXB
                        </li>
                    </ul>
                }
                else
                {
                    <div class="alert alert-success p-2 mb-3">
                        <small>
                            <i class="fas fa-check me-1"></i>
                            <strong>An toàn:</strong> Không có dữ liệu liên quan
                        </small>
                    </div>

                    <p class="text-success small mb-0">
                        <i class="fas fa-thumbs-up me-2"></i>
                        Nhà xuất bản này có thể được xóa an toàn mà không ảnh hưởng đến dữ liệu khác.
                    </p>
                }
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="admin-card mt-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="fas fa-tools me-2"></i>Hành động khác</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-page="Details" asp-route-id="@Model.Publisher.PublisherId"
                        class="btn btn-outline-info btn-sm">
                        <i class="fas fa-eye me-2"></i>Xem chi tiết
                    </a>
                    <a asp-page="Edit" asp-route-id="@Model.Publisher.PublisherId"
                        class="btn btn-outline-warning btn-sm">
                        <i class="fas fa-edit me-2"></i>Chỉnh sửa
                    </a>
                    @if (Model.BookCount > 0)
                    {
                        <a href="#" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-book me-2"></i>Quản lý sách (@Model.BookCount)
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@page
@model DetailsModel
@{
    ViewData["Title"] = "Chi tiết Nhà xuất bản";
    Layout = "_AdminLayout";
}

<!-- Page Header -->
<div class="admin-card mb-4">
    <div class="card-header bg-info text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-building me-2"></i>Chi tiết Nhà xuất bản
            </h4>
            <div>
                <a asp-page="Edit" asp-route-id="@Model.Publisher.PublisherId" class="btn btn-warning btn-sm me-2">
                    <i class="fas fa-edit me-1"></i>Chỉnh sửa
                </a>
                <a asp-page="Index" class="btn btn-light btn-sm">
                    <i class="fas fa-arrow-left me-1"></i>Quay lại
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Publisher Info Card -->
    <div class="col-lg-4">
        <div class="admin-card mb-4">
            <div class="card-body text-center">
                <div class="bg-info rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" 
                     style="width: 100px; height: 100px;">
                    <i class="fas fa-building text-white fa-3x"></i>
                </div>
                
                <h4 class="card-title mb-3">@Model.Publisher.PublisherName</h4>
                
                <div class="row text-center mt-4">
                    <div class="col-12">
                        <h5 class="text-info mb-0">@Model.GetTotalBooks()</h5>
                        <small class="text-muted">Tổng sách đã xuất bản</small>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Contact Info -->
        <div class="admin-card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin liên hệ</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label fw-bold">Tên nhà xuất bản:</label>
                    <p class="mb-0">@Model.Publisher.PublisherName</p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Địa chỉ:</label>
                    <p class="mb-0">
                        @if (!string.IsNullOrEmpty(Model.Publisher.Address))
                        {
                            <i class="fas fa-map-marker-alt me-2 text-info"></i>@Model.Publisher.Address
                        }
                        else
                        {
                            <span class="text-muted">Chưa có thông tin</span>
                        }
                    </p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label fw-bold">Website:</label>
                    <p class="mb-0">
                        @if (!string.IsNullOrEmpty(Model.Publisher.Website))
                        {
                            <i class="fas fa-globe me-2 text-info"></i>
                            <a href="@(Model.Publisher.Website.StartsWith("http") ? Model.Publisher.Website : "https://" + Model.Publisher.Website)" 
                               target="_blank" class="text-decoration-none">
                                @Model.Publisher.Website
                                <i class="fas fa-external-link-alt ms-1 small"></i>
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">Chưa có thông tin</span>
                        }
                    </p>
                </div>
                
                <div>
                    <label class="form-label fw-bold">ID:</label>
                    <p class="mb-0"><code>@Model.Publisher.PublisherId</code></p>
                </div>
            </div>
        </div>
        
        <!-- Publishing Stats -->
        <div class="admin-card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Thống kê xuất bản</h5>
            </div>
            <div class="card-body">
                @if (Model.GetTotalBooks() > 0)
                {
                    <div class="mb-3">
                        <label class="form-label fw-bold">Sách mới nhất:</label>
                        @if (Model.GetNewestBook() != null)
                        {
                            var newestBook = Model.GetNewestBook()!;
                            <p class="mb-0">
                                <i class="fas fa-book me-2 text-success"></i>@newestBook.Title
                                @if (newestBook.CreatedAt.HasValue)
                                {
                                    <br><small class="text-muted">@newestBook.CreatedAt.Value.ToString("dd/MM/yyyy")</small>
                                }
                            </p>
                        }
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Sách cũ nhất:</label>
                        @if (Model.GetOldestBook() != null)
                        {
                            var oldestBook = Model.GetOldestBook()!;
                            <p class="mb-0">
                                <i class="fas fa-book me-2 text-warning"></i>@oldestBook.Title
                                @if (oldestBook.CreatedAt.HasValue)
                                {
                                    <br><small class="text-muted">@oldestBook.CreatedAt.Value.ToString("dd/MM/yyyy")</small>
                                }
                            </p>
                        }
                    </div>
                    
                    <!-- Books by Year -->
                    <div>
                        <label class="form-label fw-bold">Sách theo năm:</label>
                        @foreach (var yearGroup in Model.GetBooksByYear().Take(5))
                        {
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <span>@(yearGroup.Key?.ToString() ?? "Chưa rõ"):</span>
                                <span class="badge bg-info">@yearGroup.Count() sách</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3 mb-0">
                        <i class="fas fa-book me-2"></i>Chưa xuất bản sách nào
                    </p>
                }
            </div>
        </div>
    </div>
    
    <!-- Main Content -->
    <div class="col-lg-8">
        <!-- Recent Books -->
        <div class="admin-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-book me-2"></i>Sách gần đây (@Model.GetTotalBooks())</h5>
                @if (Model.GetTotalBooks() > 10)
                {
                    <small><a href="#" class="text-primary">Xem tất cả</a></small>
                }
            </div>
            <div class="card-body">
                @if (Model.RecentBooks.Any())
                {
                    <div class="row">
                        @foreach (var book in Model.RecentBooks)
                        {
                            <div class="col-md-6 mb-4">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-body">
                                        <div class="d-flex">
                                            <div class="bg-info rounded d-flex align-items-center justify-content-center me-3" 
                                                 style="width: 60px; height: 80px; min-width: 60px;">
                                                <i class="fas fa-book text-white fa-lg"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="card-title mb-1">@book.Title</h6>

                                                @if (book.Author != null)
                                                {
                                                    <p class="text-muted small mb-1">
                                                        <i class="fas fa-user me-1"></i>
                                                        @book.Author.AuthorName
                                                    </p>
                                                }
                                                
                                                <div class="d-flex justify-content-between align-items-center">
                                                    @if (book.PublishedYear.HasValue)
                                                    {
                                                        <small class="text-muted">
                                                            <i class="fas fa-calendar me-1"></i>@book.PublishedYear
                                                        </small>
                                                    }
                                                    @if (book.CreatedAt.HasValue)
                                                    {
                                                        <small class="text-muted">
                                                            @book.CreatedAt.Value.ToString("dd/MM/yyyy")
                                                        </small>
                                                    }
                                                </div>
                                                
                                                @if (!string.IsNullOrEmpty(book.Description))
                                                {
                                                    <p class="card-text small text-muted mt-2 mb-0">
                                                        @(book.Description.Length > 80 ? book.Description.Substring(0, 80) + "..." : book.Description)
                                                    </p>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    
                    @if (Model.GetTotalBooks() > Model.RecentBooks.Count)
                    {
                        <div class="text-center mt-3">
                            <a href="#" class="btn btn-outline-info">
                                <i class="fas fa-plus me-2"></i>Xem thêm @(Model.GetTotalBooks() - Model.RecentBooks.Count) sách khác
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-book fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Chưa có sách nào</h5>
                        <p class="text-muted">Nhà xuất bản này chưa xuất bản sách nào trong hệ thống</p>
                        <a href="#" class="btn btn-outline-info">
                            <i class="fas fa-plus me-2"></i>Thêm sách mới
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@page
@model IndexModel
@{
    ViewData["Title"] = "Quản lý Tác giả";
    Layout = "_AdminLayout";
}

<!-- Page Header -->
<div class="admin-card mb-4">
    <div class="card-header bg-success text-white">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-users me-2"></i>Quản lý Tác giả
            </h4>
            <a asp-page="Create" class="btn btn-light btn-sm">
                <i class="fas fa-plus me-1"></i>Thêm tác giả mới
            </a>
        </div>
    </div>
</div>

<!-- Search Section -->
<div class="admin-card mb-4">
    <div class="card-body p-3">
        <form method="get" id="searchForm">
            <div class="row g-3 align-items-center">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Tìm theo tên</label>
                    <input type="text" class="form-control" asp-for="SearchName" placeholder="Nhập tên tác giả...">
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">Tìm theo email</label>
                    <input type="email" class="form-control" asp-for="SearchEmail" placeholder="Nhập email...">
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold">Sắp xếp</label>
                    <select class="form-select" asp-for="SortBy">
                        <option value="AuthorName">Tên tác giả</option>
                        <option value="Email">Email</option>
                        <option value="BookCount">Số sách</option>
                        <option value="BirthDate">Ngày sinh</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold">Thứ tự</label>
                    <select class="form-select" asp-for="SortDirection">
                        <option value="asc">Tăng dần</option>
                        <option value="desc">Giảm dần</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <label class="form-label fw-bold">&nbsp;</label>
                    <div>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <a href="/Admin/Authors" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-eraser me-1"></i>Xóa bộ lọc
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Results Summary -->
<div class="row mb-3">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <p class="text-muted mb-0">
                    Hiển thị <strong class="text-primary">@Model.FilteredAuthors</strong> / <strong>@Model.TotalAuthors</strong> tác giả
                    @if (Model.FilteredAuthors != Model.TotalAuthors)
                    {
                        <span class="badge bg-success ms-2">Đã lọc</span>
                    }
                </p>
            </div>
            <div>
                <a asp-page="Create" class="btn btn-admin-primary">
                    <i class="fas fa-plus me-2"></i>Thêm tác giả mới
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Authors Grid -->
<div class="row">
    @if (Model.Authors.Any())
    {
        @foreach (var author in Model.Authors)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="admin-card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-start">
                            <div class="flex-shrink-0">
                                <div class="bg-success rounded-circle d-flex align-items-center justify-content-center" 
                                     style="width: 60px; height: 60px;">
                                    <i class="fas fa-user text-white fa-lg"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h5 class="card-title mb-1">@author.AuthorName</h5>
                                @if (!string.IsNullOrEmpty(author.Email))
                                {
                                    <p class="text-muted small mb-1">
                                        <i class="fas fa-envelope me-1"></i>@author.Email
                                    </p>
                                }
                                @if (author.BirthDate.HasValue)
                                {
                                    <p class="text-muted small mb-1">
                                        <i class="fas fa-birthday-cake me-1"></i>@author.BirthDate.Value.ToString("dd/MM/yyyy")
                                    </p>
                                }
                                @if (!string.IsNullOrEmpty(author.Sex))
                                {
                                    <p class="text-muted small mb-2">
                                        <i class="fas fa-venus-mars me-1"></i>@author.Sex
                                    </p>
                                }
                                
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <span class="badge bg-primary">@author.Books.Count sách</span>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-page="Details" asp-route-id="@author.AuthorId" 
                                           class="btn btn-outline-info" title="Xem chi tiết" data-bs-toggle="tooltip">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-page="Edit" asp-route-id="@author.AuthorId" 
                                           class="btn btn-outline-warning" title="Chỉnh sửa" data-bs-toggle="tooltip">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-page="Delete" asp-route-id="@author.AuthorId" 
                                           class="btn btn-outline-danger" title="Xóa" data-bs-toggle="tooltip">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(author.Biography))
                        {
                            <div class="mt-3 pt-3 border-top">
                                <p class="card-text small text-muted">
                                    @(author.Biography.Length > 100 ? author.Biography.Substring(0, 100) + "..." : author.Biography)
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="admin-card">
                <div class="card-body text-center py-5">
                    @if (!string.IsNullOrEmpty(Model.SearchName) || !string.IsNullOrEmpty(Model.SearchEmail))
                    {
                        <i class="fas fa-search text-muted" style="font-size: 4rem; opacity: 0.5;"></i>
                        <h5 class="text-muted mt-3">Không tìm thấy tác giả phù hợp</h5>
                        <p class="text-muted">Thử điều chỉnh từ khóa tìm kiếm.</p>
                        <a href="/Admin/Authors" class="btn btn-outline-secondary me-2">
                            <i class="fas fa-eraser me-1"></i>Xóa bộ lọc
                        </a>
                    }
                    else
                    {
                        <i class="fas fa-user-plus fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">Chưa có tác giả nào</h5>
                        <p class="text-muted">Hãy thêm tác giả đầu tiên vào hệ thống</p>
                    }
                    <a asp-page="Create" class="btn btn-admin-primary">
                        <i class="fas fa-plus me-2"></i>Thêm tác giả mới
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Pagination -->
@if (Model.Authors.Any() && Model.TotalPages > 1)
{
    <nav aria-label="Phân trang" class="mt-4">
        <ul class="pagination justify-content-center">
            <!-- Previous Page -->
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?PageNumber=@(Model.CurrentPage - 1)@(Request.QueryString)">
                        <i class="fas fa-chevron-left"></i> Trước
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link"><i class="fas fa-chevron-left"></i> Trước</span>
                </li>
            }

            <!-- Page Numbers -->
            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" href="?PageNumber=@i@(Request.QueryString)">@i</a>
                </li>
            }

            <!-- Next Page -->
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="?PageNumber=@(Model.CurrentPage + 1)@(Request.QueryString)">
                        Sau <i class="fas fa-chevron-right"></i>
                    </a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Sau <i class="fas fa-chevron-right"></i></span>
                </li>
            }
        </ul>
    </nav>

    <!-- Page Info -->
    <div class="text-center text-muted mt-2">
        <small>
            Trang @Model.CurrentPage / @Model.TotalPages 
            (Hiển thị @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.FilteredAuthors) trong tổng số @Model.FilteredAuthors kết quả)
        </small>
    </div>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[data-bs-toggle="tooltip"]').each(function() {
                new bootstrap.Tooltip(this);
            });
        });
    </script>
}